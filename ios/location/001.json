{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://hpi.nyc/schemas/ios/001/location.json",
    "type": "array",
    "items":    {
        "type": "object",
        "properties": {
            "longitude": {
                "type": "number",
                "minimum": -180,
                "maximum": 180
            },
            "latitude": {
                "type": "number",
                "minimum": -90,
                "maximum": 90
            },
            "accuracy": {
                "type": "number",
                "minimum": 0
            },
            "timestamp": {
                "type": "string"
            }
        },
        "required": ["longitude","latitude","accuracy","timestamp"]
    }
}