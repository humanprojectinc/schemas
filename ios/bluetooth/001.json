{
    "$schema": "http://json-schema.org/schema#",
    "id": "http://hpi.nyc/schemas/ios/001/bluetooth.json",
    "type": "array",
    "items":    {
        "type": "object",
        "properties": {
            "identifier": {
                "type": "string"
            },
            "shortName": {
                "type": "string"
            },
            "rssi": {
                "type": "integer",
                "maximum": 0,
                "minimum": -255
            },
            "timestamp": {
                "type": "string"
            }
        },
        "required": ["identifier","shortName","rssi","timestamp"]
    }
}