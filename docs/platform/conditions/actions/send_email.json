{
  "properties": {
    "action": {
      "$id": "#root/conditions/items/action",
      "title": "Action",
      "type": "object",
      "required": [
        "type",
        "action_params"
      ],
      "properties": {
        "type": {
          "$id": "#root/conditions/items/action/type",
          "title": "Type",
          "type": "string",
          "enum": [
            "send_email"
          ]
        },
        "properties": {
          "action_params": {
            "$id": "#root/conditions/items/action/send_email/action_params",
            "title": "Action_params",
            "type": "object",
            "required": [
              "role_ids",
              "site_ids",
              "email_template"
            ],
            "properties": {
              "role_ids": {
                "$id": "#root/conditions/items/action/send_email/action_params/text",
                "title": "Text",
                "type": "array"
              },
              "site_ids": {
                "$id": "#root/conditions/items/action/send_email/action_params/title",
                "title": "Title",
                "type": "array"
              },
              "email_template": {
                "$id": "#root/conditions/items/action/send_email/action_params/title",
                "title": "Title",
                "type": "string",
                "pattern": "^.*$"
              }
            }
          }
        }
      }
    }
  }
}